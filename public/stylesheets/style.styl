/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #fa5b4d
background-color = #faf9f0

body
  font-family "Lucida Console", "Monaco", "monospace";
  background-color background-color
  color #444

header
  font-family "Lucida Console", "Monaco", "monospace"
  padding 20px 10px
  color #fff
  font-size 20px
  text-align center

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

.container
  width 800px
  margin 20px auto
  overflow hidden

#query_form
  float left
  width 180px
  padding-bottom 20px
  font-family "Lucida Console", "Monaco", "monospace"
  font-size 12px

  h1
    font-size 14px
    padding-top 10px
    padding-bottom 5px

  h2
    font-size 12px
    padding-top 5px
    padding-bottom 5px

  .primary
    margin-bottom 10px

#query_results
  float left
  width 500px
  padding-bottom 20px
  font-family "Lucida Console", "Monaco", "monospace"
  padding-right 10px

  .header
    padding-bottom 10px
    border-bottom 1px dotted black

  h1
    font-size 14px
    padding-top 10px
    padding-bottom 10px

  h2
    font-size 12px
    padding-top 0px
    padding-bottom 10px

  #tweet_container
    padding-top 10px

  .tweet
    padding-top 10px
    padding-bottom 10px
    font-size 12px
    line-height 1.5

    .user
      font-weight bold

    .text
      font-weight normal

    .time
      font-weight normal

p
  line-height 1.5

#templates
  visibility hidden
  disblay none

footer
  width 700px
  margin 25px auto
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 12px